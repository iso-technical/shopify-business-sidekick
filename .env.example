# Shopify App Credentials (from Shopify Partners dashboard)
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here

# Public URL of your app (no trailing slash)
# Local: http://localhost:3000
# Railway: https://your-app.up.railway.app
HOST=http://localhost:3000

# Server
PORT=3000
NODE_ENV=development

# App handle from Shopify Partners (used for admin redirect after OAuth)
APP_HANDLE=mr-bean

# Google Analytics â€” Service Account (from Google Cloud Console)
# Create a service account, enable GA4 Data API, add SA email as viewer on GA property
GA_PROPERTY_ID=
GA_SERVICE_ACCOUNT_EMAIL=
GA_PRIVATE_KEY=

# Session secret (auto-generated if not set)
SESSION_SECRET=
